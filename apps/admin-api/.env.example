# Admin API
NODE_ENV=development
PORT=3001
TRUST_PROXY=true

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/inventory
PGSSLMODE=

# Auth + cookies
AUTH_JWT_SECRET=replace-with-long-random-secret
COOKIE_NAME=admin_session
COOKIE_SECURE=false
SESSION_TTL_HOURS=12

# Comma-separated allowlists
ADMIN_USERS=admin@example.com
STAFF_USERS=staff@example.com

# Hashes for each role password (bcrypt hash string)
ADMIN_PASSWORD_HASH=
STAFF_PASSWORD_HASH=

# Login rate limiting
LOGIN_RATE_LIMIT_MAX=10
LOGIN_RATE_LIMIT_WINDOW_MS=900000

# Upload limits
MAX_UPLOAD_MB=25
